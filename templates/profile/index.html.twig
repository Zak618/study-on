{% extends 'base.html.twig' %}

{% block title %}Профиль пользователя{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Профиль пользователя</h2>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Email:</strong> {{ email }}</p>
                    <p class="card-text"><strong>Роль:</strong> {{ roles|join(', ') }}</p>
                    <p class="card-text"><strong>Баланс:</strong> {{ balance }} руб.</p>
                    <form action="{{ path('app_logout') }}" method="post" class="d-flex justify-content-between">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                        <button type="submit" class="btn btn-danger">Выход</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
    {{ lesson.name }}
{% endblock %}

{% block body %}
    <h1 class="ml-2">{{ lesson.name }}</h1>

    <h5 class="ml-2">Курс:
        <a href="{{ path('app_course_show', { 'code': lesson.course.code }) }}" style="text-decoration: none;">{{ lesson.course.title }}</a>
    </h5>

    <hr>

    <a href="{{ path('app_course_show', { 'code': lesson.course.code }) }}" class="ml-2">
        <button type="button" class="btn btn-outline-secondary">Назад к курсу</button>
    </a>
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">
            <button type="button" class="btn btn-outline-secondary">Редактировать</button>
        </a>

        {{ include('lesson/_delete_form.html.twig') }}
    {% endif %}
    <div class="card mx-3 mt-2">
        <div class="card-body">
            {{ lesson.content }}
        </div>
    </div>
{% endblock %}

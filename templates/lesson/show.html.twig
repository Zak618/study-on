{% extends 'base.html.twig' %}

{% block title %}
	{{ lesson.name }}
{% endblock %}

{% block body %}
	<h1 style="margin-left: 20px;">{{ lesson.name }}</h1>

	<h5 style="margin-left: 20px;">Курс:
		<a href="{{ path('app_course_show', { 'id': lesson.course.id }) }}" style="text-decoration: none;">{{ lesson.course.name }}</a>
	</h5>

	<hr>

	<a href="{{ path('app_course_show', { 'id': lesson.course.id }) }}" style="margin-left: 20px;">
		<button type="button" class="btn btn-outline-secondary">Назад к курсу</button>
	</a>

	<a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">
		<button type="button" class="btn btn-outline-secondary">Редактировать</button>
	</a>

	{{ include('lesson/_delete_form.html.twig') }}

	<div class="card mx-3 mt-2">
                <div class="card-body">
                    {{ lesson.content }}
                </div>
            </div>
{% endblock %}
